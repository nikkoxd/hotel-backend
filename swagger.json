{
    "openapi": "3.0.0",
    "info": {
      "title": "Hotel Booking API",
      "version": "1.0.0",
      "description": "API для управления номерами отеля"
    },
    "servers": [
      {
        "url": "http://localhost:5000/api"
      }
    ],
    "paths": {
      "/login": {
        "post": {
          "summary": "Вход администратора",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "login": { "type": "string" },
                    "password": { "type": "string" }
                  }
                }
              }
            },
            "responses": {
              "200": {
                "description": "Успешный вход",
                "headers": {
                  "Set-Cookie": {
                    "schema": {
                      "type": "string",
                      "description": "Bearer-токен в cookie"
                    }
                  }
                }
              },
              "401": {
                "description": "Неверный логин или пароль"
              }
            }
          }
        }
      }
    }
  }